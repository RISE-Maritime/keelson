{
  "imports": {
    "@eclipse-zenoh/zenoh-ts": "npm:@eclipse-zenoh/zenoh-ts@1.6.2"
    "@bufbuild/protobuf": "npm:@bufbuild/protobuf"
  },

  "compilerOptions": {
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "types": ["deno.ns", "deno.unstable", "deno.test"],
    "moduleResolution": "bundler",
    "strict": true
  },

  "tasks": {
    "build": "deno bundle keelson/index.ts dist/index.js",
    "types": "deno emit --check=all --compiler-options '{\"declaration\":true,\"emitDeclarationOnly\":true}' keelson/index.ts > dist/index.d.ts",
    "test": "deno test"
  },

  "unstable": ["sloppy-imports"]
}
